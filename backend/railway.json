{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "dotnet restore && dotnet publish src/MediCore.API/MediCore.API.csproj -c Release -o out"
  },
  "deploy": {
    "startCommand": "cd out && dotnet MediCore.API.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
